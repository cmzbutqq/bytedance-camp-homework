<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List - 任务管理</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>📝 Todo List</h1>
            <p class="subtitle">简单高效的任务管理工具</p>
        </header>

        <main>
            <!-- 添加任务表单 -->
            <section class="add-todo-section">
                <form id="addTodoForm" class="todo-form">
                    <input 
                        type="text" 
                        id="todoInput" 
                        placeholder="输入新任务..." 
                        required
                        autocomplete="off"
                    >
                    <button type="submit" class="btn btn-primary">添加任务</button>
                </form>
            </section>

            <!-- 任务列表 -->
            <section class="todos-section">
                <div class="todos-header">
                    <h2>任务列表</h2>
                    <span id="todoCount" class="todo-count">
                        <%= todos.length %> 个任务
                    </span>
                </div>
                
                <div id="todosList" class="todos-list">
                    <% if (todos.length === 0) { %>
                        <div class="empty-state">
                            <p>🎉 还没有任务，添加一个开始吧！</p>
                        </div>
                    <% } else { %>
                        <% todos.forEach(todo => { %>
                            <div class="todo-item" data-id="<%= todo.id %>">
                                <input 
                                    type="checkbox" 
                                    class="todo-checkbox" 
                                    <%= todo.completed ? 'checked' : '' %>
                                    data-id="<%= todo.id %>"
                                >
                                <span class="todo-title <%= todo.completed ? 'completed' : '' %>">
                                    <%= todo.title %>
                                </span>
                                <div class="todo-actions">
                                    <button class="btn btn-edit" data-id="<%= todo.id %>">编辑</button>
                                    <button class="btn btn-delete" data-id="<%= todo.id %>">删除</button>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </section>
        </main>
    </div>

    <!-- 编辑任务模态框 -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>编辑任务</h2>
            <form id="editTodoForm">
                <input 
                    type="text" 
                    id="editTodoInput" 
                    placeholder="输入任务标题..." 
                    required
                >
                <div class="modal-actions">
                    <button type="submit" class="btn btn-primary">保存</button>
                    <button type="button" class="btn btn-secondary" id="cancelEdit">取消</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/app.js"></script>
</body>
</html>

